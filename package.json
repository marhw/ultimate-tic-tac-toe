  "lint-staged": {
    "./frontend-vue/src/**/*.{js,vue,ts}": [
      "npx --prefix ./frontend-vue eslint --fix --config ./frontend-vue/eslint.config.js",
      "npx --prefix ./frontend-vue prettier --write --config ./frontend-vue/.prettierrc",
      "npx --prefix ./frontend-vue eslint --fix --config ./frontend-vue/eslint.config.js"
    ],
    "./backend-symfony/src/**/*.php": [
